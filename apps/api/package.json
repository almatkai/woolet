{
    "name": "@woolet/api",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "bun run --env-file=../../.env --watch src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target bun",
        "start": "bun run dist/index.js",
        "test": "bun test --preload ./test/setup.ts",
        "lint": "tsc --noEmit",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "@clerk/backend": "^1.34.0",
        "@google/generative-ai": "^0.24.1",
        "@hono/clerk-auth": "^2.0.1",
        "@hono/trpc-server": "^0.3.4",
        "@openrouter/sdk": "^0.5.1",
        "@sentry/bun": "^10.38.0",
        "@sentry/node": "7.120.3",
        "@trpc/server": "^10.45.4",
        "@woolet/shared": "workspace:*",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.38.4",
        "groq-sdk": "^0.37.0",
        "hono": "^4.11.7",
        "ioredis": "^5.9.2",
        "openai": "^6.17.0",
        "pino": "^10.3.0",
        "postgres": "^3.4.8",
        "superjson": "^2.2.6",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/bun": "^1.3.8",
        "@types/pino": "^7.0.5",
        "drizzle-kit": "^0.30.6",
        "typescript": "^5.9.3"
    }
}