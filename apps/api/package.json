{
    "name": "@woolet/api",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "bun run --env-file=../../.env --watch src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target bun",
        "start": "bun run dist/index.js",
        "test": "bun test --preload ./test/setup.ts",
        "lint": "tsc --noEmit",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "@clerk/backend": "^1.21.1",
        "@google/generative-ai": "^0.24.1",
        "@hono/clerk-auth": "^2.0.0",
        "@hono/trpc-server": "^0.3.2",
        "@openrouter/sdk": "^0.5.1",
        "@trpc/server": "^10.45.2",
        "@woolet/shared": "workspace:*",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.38.3",
        "groq-sdk": "^0.37.0",
        "hono": "^4.6.16",
        "ioredis": "^5.4.2",
        "openai": "^6.16.0",
        "postgres": "^3.4.5",
        "superjson": "^2.2.6",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/bun": "^1.1.14",
        "drizzle-kit": "^0.30.1",
        "typescript": "^5.7.2"
    }
}