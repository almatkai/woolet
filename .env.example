# Database (Generic/Docker)
DB_ADMIN_USER=postgres
DB_ADMIN_PASSWORD=password
DB_USER=woolet_app
DB_PASSWORD=password
DB_NAME=woolet
DB_PORT=5432

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@localhost:5432/${DB_NAME}

# Clerk
VITE_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
CLERK_PUBLISHABLE_KEY=pk_test_xxx
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx

# Redis (Docker)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=password

# Docker Images (for production)
WOOLET_API_IMAGE=ghcr.io/username/repo/api:latest
WOOLET_WEB_IMAGE=ghcr.io/username/repo/web:latest
WOOLET_LANDING_IMAGE=ghcr.io/username/repo/landing:latest

# App
NODE_ENV=development
API_URL=http://localhost:3001
WEB_URL=http://localhost:3000

# Error Tracking (GlitchTip - Sentry compatible)
GLITCHTIP_DSN_API=
VITE_GLITCHTIP_DSN_WEB=

# GlitchTip Self-Hosting (for docker-compose.monitoring.yml)
GLITCHTIP_DB_PASSWORD=glitchtip_password
GLITCHTIP_SECRET_KEY=generate_a_long_random_string_here
GLITCHTIP_DOMAIN=http://localhost:8000
GLITCHTIP_FROM_EMAIL=alerts@woolet.com

# PostHog
VITE_PUBLIC_POSTHOG_KEY=
VITE_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Logging
LOG_LEVEL=info

# AI Providers (optional)
# Provider order (first working provider wins): openrouter,openai,gemini
AI_PROVIDER_ORDER=openrouter,openai,gemini

# OpenRouter (OpenAI-compatible)
OPEN_ROUTER_API_KEY=
OPENROUTER_CHAT_MODEL=upstage/solar-pro-3:free
# Optional but recommended by OpenRouter
OPENROUTER_SITE_URL=http://localhost:3000
OPENROUTER_APP_NAME=Woolet

# OpenAI
OPENAI_API_KEY=
OPENAI_CHAT_MODEL=gpt-4o-mini

# Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Other API Keys
CURRENCY_API_KEY=
GROQ_API_KEY=
TWELVE_DATA=

# Push Notifications (VAPID)
# Generate with: cd apps/api && bun run vapid-gen
VAPID_SUBJECT=mailto:woolet.app@gmail.com
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

