# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/woolet ?sslmode=require

# Clerk
VITE_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# Redis (Docker)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=password

# App
NODE_ENV=development
API_URL=http://localhost:3001
WEB_URL=http://localhost:3000

# Error Tracking (GlitchTip - Sentry compatible)
GLITCHTIP_DSN_API=
VITE_GLITCHTIP_DSN_WEB=

# GlitchTip Self-Hosting (for docker-compose.monitoring.yml)
GLITCHTIP_DB_PASSWORD=glitchtip_password
GLITCHTIP_SECRET_KEY=generate_a_long_random_string_here
GLITCHTIP_DOMAIN=http://localhost:8000
GLITCHTIP_FROM_EMAIL=alerts@woolet.com

# PostHog
VITE_PUBLIC_POSTHOG_KEY=
VITE_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Logging
LOG_LEVEL=info

# AI Providers (optional)
# Provider order (first working provider wins): openrouter,openai,gemini
AI_PROVIDER_ORDER=openrouter,openai,gemini

# OpenRouter (OpenAI-compatible)
OPEN_ROUTER_API_KEY=
OPENROUTER_CHAT_MODEL=upstage/solar-pro-3:free
# Optional but recommended by OpenRouter
OPENROUTER_SITE_URL=http://localhost:3000
OPENROUTER_APP_NAME=Woolet

# OpenAI
OPENAI_API_KEY=
OPENAI_CHAT_MODEL=gpt-4o-mini

# Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
